{
    "$id": "https://github.com/chromeos/digital-datasheets/blob/main/part-spec/sensor.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "sensor",
    "oneOf": [
        {
            "title": "accelerometer",
            "type": "object",
            "properties": {
                "accelerometerType": {
                    "description": "type of accelerometer",
                    "examples": [
                        "capacitive MEMS",
                        "piezoresistive",
                        "piezoelectric"
                    ],
                    "type": "string"
                },
                "accelerationRanges": {
                    "description": "range of force that accelerometer can measure",
                    "examples": [
                        "2",
                        "4",
                        "8",
                        "16"
                    ],
                    "comment": "units of g",
                    "type": "number"
                },
                "accelerationSensitivity": {
                    "description": "smallest change in force the accelerometer is able to capture (typical) at a given acceleration range",
                    "examples": [
                        "16000",
                        "8000",
                        "4000",
                        "2000"
                    ],
                    "comment": "units of LSB/g (least significant bits per g) at a given acceleration range and output resolution",
                    "$ref": "conditionalProperty.json#/conditionalProperty"
                },
                "accelerationSensitivityOverTemperature": {
                    "description": "accelerometer sensitivity change over temperature",
                    "comment": "units of percentage per degree celsius (%/Celsius)",
                    "$ref": "unit.json#/unit"
                },
                "axis": {
                    "description": "number of axes of acceleration measurement",
                    "type": "number"
                },
                "zerogOffset": {
                    "description": "output of the accelerometer when no acceleration is applied",
                    "comment": "units of g-force (g)",
                    "$ref": "unit.json#/unit"
                },
                "zerogOffsetOverTemperature": {
                    "description": "accelerometer zero-g offset change over temperature",
                    "comment": "units of milli g-force per degree celsius (mg/Celcius)",
                    "$ref": "unit.json#/unit"
                },
                "outputType": {
                    "description": "measurement output type",
                    "enum": [
                        "analog",
                        "digital"
                    ],
                    "type": "string"
                },
                "outputResolution": {
                    "description": "output resolution of acceleration measurement",
                    "comment": "units of bits",
                    "$ref": "unit.json#/unit"
                },
                "interface": {
                    "description": "interface(s) for communication to host",
                    "examples": [
                        "i2c",
                        "spi",
                        "analog"
                    ],
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "bandwidth": {
                    "description": "bandwidth of acceleration measurement",
                    "comment": "units of Hz",
                    "$ref": "unit.json#/unit"
                },
                "outputDataRate": {
                    "description": "output Data rate (ODR) of a device",
                    "comment": "units of Hz",
                    "$ref": "unit.json#/unit"
                },
                "rmsNoise": {
                    "description": "broadband rms noise of a device",
                    "comment": "units of milli g-force",
                    "$ref": "unit.json#/unit"
                },
                "spectralNoiseDensity": {
                    "description": "spectral noise density of a device",
                    "comment": "units of milli g-force per square root of Hz (milli-g/rt-Hz)",
                    "$ref": "unit.json#/unit"
                },
                "currentConsumption": {
                    "description": "current consumption of a device",
                    "$ref": "currentConsumption.json#/currentConsumption"
                }
            }
        },
        {
            "title": "gyroscope",
            "type": "object",
            "properties": {
                "gyroRanges": {
                    "description": "range of angular speed that gyro can measure",
                    "comment": "units of degrees-per-second (dps)",
                    "type": "number"
                },
                "gyroSensitivity": {
                    "description": "smallest change in angular speed gyro is able to capture (typical) at a given gyro range",
                    "comment": "units of LSB/dps",
                    "$ref": "conditionalProperty.json#/conditionalProperty"
                },
                "gyroSensitivityOverTemperature": {
                    "description": "gyroscope sensitivity change over temperature",
                    "comment": "units of percentage per degree celsius",
                    "$ref": "unit.json#/unit"
                },
                "axis": {
                    "description": "number of axes of measurement",
                    "type": "number"
                },
                "zeroRateOffset": {
                    "description": "output of the gyroscope when no angular velocity is applied",
                    "comment": "units of degrees-per-second",
                    "$ref": "unit.json#/unit"
                },
                "zeroRateOffsetOverTemperature": {
                    "description": "gyro zero rate offset change over temperature",
                    "comment": "units of degrees-per-second per degree celsius (dps/Celsius)",
                    "$ref": "unit.json#/unit"
                },
                "interface": {
                    "description": "interface(s) for communication to host",
                    "examples": [
                        "i2c",
                        "spi",
                        "analog"
                    ],
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "bandwidth": {
                    "description": "bandwidth of gyroscope",
                    "comment": "units of Hz",
                    "$ref": "unit.json#/unit"
                },
                "outputDataRate": {
                    "description": "output Data rate (ODR) of a device",
                    "comment": "units of Hz",
                    "$ref": "unit.json#/unit"
                },
                "outputType": {
                    "description": "measurement output type",
                    "enum": [
                        "analog",
                        "digital"
                    ],
                    "type": "string"
                },
                "rmsNoise": {
                    "description": "broadband rms noise of a device",
                    "comment": "units of degrees-per-second rms",
                    "$ref": "unit.json#/unit"
                },
                "spectralNoiseDensity": {
                    "description": "spectral noise density of a device",
                    "comment": "units of degrees-per-second per square root Hertz (dps/rt-Hz)",
                    "$ref": "unit.json#/unit"
                },
                "currentConsumption": {
                    "description": "current consumption of a device",
                    "$ref": "currentConsumption.json#/currentConsumption"
                }
            }
        },
        {
            "title": "magnetic sensor",
            "type": "object",
            "properties": {
                "magneticSensingTechnology": {
                    "description": "method by which magnetism is detected",
                    "examples": [
                        "gmr",
                        "hall effect"
                    ],
                    "type": "string"
                },
                "outputType": {
                    "description": "measurement output type",
                    "enum": [
                        "analog",
                        "pwm"
                    ],
                    "type": "string"
                },
                "quiescentOutput": {
                    "description": "output of the magnetic sensor when no magnet is present",
                    "comment": "units of volts(v)",
                    "$ref": "unit.json#/unit"
                },
                "outputVoltageLinearRange": {
                    "description": "output voltage range over which the magnetic flux density response is linear",
                    "comment": "lower value of the range captured by min value and top value of the range captured by max value (V) ",
                    "$ref": "unit.json#/unit"
                },
                "linearMagneticSensingRange": {
                    "description": "magnetic flux density range over which the output voltage is linear ",
                    "comment": "units of mT",
                    "$ref": "unit.json#/unit"
                },
                "sensitivity": {
                    "description": "this is the gain - amount of change in the output voltage for a change in the magnetic flux density",
                    "comment": "units of mV/mT",
                    "$ref": "unit.json#/unit"
                },
                "operatePoint": {
                    "description": "magnetic flux density threshold which causes the sensor output to turn on",
                    "comment": "units of mT. Depending on the sensor's design, the operation point can cause the output to trip High or Low.",
                    "$ref": "unit.json#/unit"
                },
                "releasePoint": {
                    "description": "magnetic flux density threshold which causes the sensor output to turn off",
                    "comment": "units of mT. Depending on the sensor's design, the release point can cause the output to trip High or Low.",
                    "$ref": "unit.json#/unit"
                },
                "outputPolarity": {
                    "description": "indicates whether the sensor output is active high or active low",
                    "enum": [
                        "high",
                        "low"
                    ],
                    "type": "string"
                },
                "hysteresis": {
                    "description": "delta between the operate point and the release point threshold",
                    "comment": "units of mT",
                    "$ref": "unit.json#/unit"
                },
                "bandwidth": {
                    "description": "sensing bandwidth",
                    "comment": "units of Hz",
                    "$ref": "unit.json#/unit"
                },
                "currentConsumption": {
                    "description": "current consumption of a device",
                    "$ref": "currentConsumption.json#/currentConsumption"
                }
            }
        },
        {
            "title": "thermal",
            "type": "object",
            "properties": {
                "sensingTechnology": {
                    "description": "method by which temperature is detected",
                    "examples": [
                        "rtd",
                        "thermistor",
                        "silicon bandgap"
                    ],
                    "type": "string"
                },
                "outputType": {
                    "description": "measurement output type",
                    "enum": [
                        "analog",
                        "digital"
                    ],
                    "type": "string"
                },
                "interface": {
                    "description": "interface(s) for communication to host",
                    "examples": [
                        "i2c",
                        "spi",
                        "analog"
                    ],
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "accuracy": {
                    "description": "accuracy of temperature sensor",
                    "comment": "units of degrees C",
                    "$ref": "unit.json#/unit"
                },
                "temperatureRange": {
                    "description": "range of temperature sensor",
                    "comment": "units of degrees C",
                    "$ref": "unit.json#/unit"
                },
                "resolution": {
                    "description": "maximum resolution of temperature sensor",
                    "comment": "units of degreesC/LSD",
                    "type": "number"
                },
                "gain": {
                    "description": "amount of change in the output voltage for a change in temperature",
                    "comment": "units of mV/degrees C",
                    "$ref": "unit.json#/unit"
                },
                "currentConsumption": {
                    "description": "current consumption of a device",
                    "$ref": "currentConsumption.json#/currentConsumption"
                }
            }
        }
    ]
}