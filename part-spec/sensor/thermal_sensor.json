{
    "$id": "https://github.com/edatasheets/digital-datasheets/blob/main/part-spec/sensor/thermal_sensor.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "specification of thermal sensor",
    "thermal_sensor": {
        "type": "object",
        "required": [
            "partType"
        ],
        "properties": {
            "partType": {
                "description": "part type",
                "enum": [
                    "thermal_sensor"
                ],
                "type": "string"
            },
            "sensingTechnology": {
                "description": "method by which temperature is detected",
                "examples": [
                    "rtd",
                    "thermistor",
                    "silicon bandgap"
                ],
                "type": "string"
            },
            "outputType": {
                "description": "measurement output type",
                "enum": [
                    "analog",
                    "digital"
                ],
                "type": "string"
            },
            "interface": {
                "description": "interface(s) for communication to host",
                "examples": [
                    "i2c",
                    "spi",
                    "analog"
                ],
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "operatingTemperatureMaximum": {
                "description": "maximum operating temperature of a part",
                "comment": "units of degrees C",
                "$ref": "../common/values.json#/valueOptions"
            },
            "thermalDesignPower": {
                "description": "power at which thermal compliance should be evaluated at steady-state",
                "comment": "units of watts",
                "$ref": "../common/values.json#/valueOptions"
            },
            "maximumTurboPower": {
                "description": "maximum transient power the part will dissipate",
                "comment": "units of watts",
                "$ref": "../common/values.json#/valueOptions"
            },
            "accuracy": {
                "description": "accuracy of temperature sensor",
                "comment": "units of degrees C",
                "$ref": "../common/values.json#/valueOptions"
            },
            "temperatureRange": {
                "description": "range of temperature sensor",
                "comment": "units of degrees C",
                "$ref": "../common/values.json#/valueOptions"
            },
            "resolution": {
                "description": "maximum resolution of temperature sensor",
                "comment": "units of degreesC/LSD",
                "type": "number"
            },
            "gain": {
                "description": "amount of change in the output voltage for a change in temperature",
                "comment": "units of mV/degrees C",
                "type": "number"
            },
            "currentConsumption": {
                "description": "current used by device in various power modes",
                "type": "array",
                "items": {
                    "$ref": "../common/currentConsumption.json#/currentConsumption"
                }
            }
        },
        "additionalProperties": false
    }
}
