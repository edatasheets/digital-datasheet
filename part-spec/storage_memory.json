{
    "$id": "https://github.com/chromeos/digital-datasheets/blob/main/part-spec/storage_memory.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "storage/memory",
    "oneOf": [
        {
            "title": "ssd",
            "type": "object",
            "required": [
                "capacity"
            ],
            "properties": {
                "type": {
                    "description": "type of ssd storage as defined by interface and technology",
                    "examples": [
                        "sata",
                        "nvme"
                    ],
                    "type": "string"
                },
                "capacity": {
                    "description": "capacity of SSD",
                    "comment": "units of bytes (B)",
                    "$ref": "unit.json#/unit"
                },
                "dataRate": {
                    "description": "maximum data rate",
                    "comment": "units of bytes per second (Bps)",
                    "$ref": "unit.json#/unit"
                },
                "interface": {
                    "description": "interface of ssd to host",
                    "examples": [
                        "pcie gen3",
                        "sata",
                        "etc."
                    ],
                    "type": "string"
                },
                "currentConsumption": {
                    "description": "current consumption of a device",
                    "comment": "units of amps",
                    "$ref": "currentConsumption.json#/currentConsumption"
                }
            }
        },
        {
            "title": "sd card",
            "type": "object",
            "required": [
                "capacity"
            ],
            "properties": {
                "type": {
                    "description": "type of sd card",
                    "examples": [
                        "micro",
                        "mini",
                        "full size"
                    ],
                    "type": "string"
                },
                "capacity": {
                    "description": "capacity of SD card",
                    "comment": "units of bytes (B)",
                    "$ref": "unit.json#/unit"
                },
                "dataRate": {
                    "description": "maximum data rate",
                    "comment": "units of bytes per second (Bps)",
                    "$ref": "unit.json#/unit"
                },
                "currentConsumption": {
                    "description": "current consumption of a device",
                    "comment": "units of amps",
                    "$ref": "currentConsumption.json#/currentConsumption"
                }
            }
        },
        {
            "title": "dram",
            "type": "object",
            "required": [
                "capacity"
            ],
            "properties": {
                "type": {
                    "description": "type of dram",
                    "examples": [
                        "lpddr3",
                        "ddr3",
                        "lpddr4",
                        "lpddr4x",
                        "ddr4",
                        "lpddr5",
                        "ddr5"
                    ],
                    "type": "string"
                },
                "capacity": {
                    "description": "capacity of dram chip",
                    "comment": "units of bytes (B)",
                    "$ref": "unit.json#/unit"
                },
                "diesPerChip": {
                    "description": "number of dies of dram chip",
                    "type": "number"
                },
                "channelsPerDie": {
                    "description": "number of channels per die of dram chip",
                    "type": "number"
                },
                "banksPerChannel": {
                    "description": "number of banks per channel of dram",
                    "type": "number"
                },
                "bitsPerChannel": {
                    "description": "channel density of dram",
                    "comment": "units of bits (b)",
                    "$ref": "unit.json#/unit"
                },
                "bitsPerDie": {
                    "description": "total die density of dram",
                    "comment": "units of bits (b)",
                    "$ref": "unit.json#/unit"
                },
                "pageSize": {
                    "description": "page size of dram",
                    "comment": "units of bytes (B)",
                    "$ref": "unit.json#/unit"
                },
                "rows": {
                    "description": "number of rows per channel of dram",
                    "type": "number"
                },
                "colunms": {
                    "description": "number of columns per row of dram",
                    "type": "number"
                },
                "speed": {
                    "description": "dram maximum speed",
                    "comment": "units of bits per second (bps)",
                    "$ref": "unit.json#/unit"
                },
                "currentConsumption": {
                    "description": "current consumption of a device",
                    "comment": "units of amps",
                    "$ref": "currentConsumption.json#/currentConsumption"
                }
            }
        },
        {
            "title": "rom",
            "type": "object",
            "properties": {
                "capacity": {
                    "description": "capacity of rom",
                    "comment": "units of bytes (B)",
                    "$ref": "unit.json#/unit"
                },
                "interface": {
                    "description": "interface of rom to host",
                    "type": "string",
                    "examples": [
                        "spi",
                        "i2c"
                    ]
                },
                "qeStatus": {
                    "description": "indicates whether the QE bit is set",
                    "type": "boolean"
                },
                "currentConsumption": {
                    "description": "current consumption of a device",
                    "comment": "units of amps",
                    "$ref": "currentConsumption.json#/currentConsumption"
                }
            }
        },
        {
            "title": "eeprom",
            "type": "object",
            "required": [
                "capacity"
            ],
            "properties": {
                "capacity": {
                    "description": "capacity/density of eeprom",
                    "comment": "units of bits",
                    "$ref": "unit.json#/unit"
                },
                "numberOfWords": {
                    "description": "number of rows in the eeprom",
                    "type": "number"
                },
                "bitsPerWords": {
                    "description": "number of columns in the eeprom",
                    "type": "number"
                },
                "bootBlockSize": {
                    "description": "size of the eeprom boot block",
                    "comment": "units of bits",
                    "$ref": "unit.json#/unit"
                },
                "interface": {
                    "description": "interface of eeprom to host",
                    "type": "string",
                    "examples": [
                        "spi",
                        "i2c",
                        "serial 1-wire"
                    ]
                },
                "clockFrequency": {
                    "description": "eeprom clock frequency",
                    "comment": "units of Hertz (Hz)",
                    "$ref": "unit.json#/unit"
                },
                "accessTime": {
                    "description": "time to access the eeprom",
                    "comment": "units of seconds (s)",
                    "$ref": "unit.json#/unit"
                },
                "endurance": {
                    "description": "time in years a bit in the eeprom can retain its data state ",
                    "type": "number"
                },
                "dataRetention": {
                    "description": "maximum number of read and write cycle the part can support",
                    "type": "number"
                },
                "currentConsumption": {
                    "description": "current consumption of a device",
                    "comment": "units of amps",
                    "$ref": "currentConsumption.json#/currentConsumption"
                }
            }
        },
        {
            "title": "flash memory",
            "type": "object",
            "required": [
                "capacity"
            ],
            "properties": {
                "capacity": {
                    "description": "capacity/density of flash memory",
                    "comment": "units of bits",
                    "$ref": "unit.json#/unit"
                },
                "pageSize": {
                    "description": "page size of flash memory",
                    "comment": "units of bits",
                    "$ref": "unit.json#/unit"
                },
                "blockSize": {
                    "description": "block size of flash memory",
                    "comment": "units of bits",
                    "$ref": "unit.json#/unit"
                },
                "bootBlockSize": {
                    "description": "size of the flash memory boot block",
                    "comment": "units of bits",
                    "$ref": "unit.json#/unit"
                },
                "interface": {
                    "description": "interface of flash memory to host",
                    "type": "string",
                    "examples": [
                        "spi",
                        "quad-spi",
                        "i2c"
                    ]
                },
                "clockFrequency": {
                    "description": "flash memory clock frequency",
                    "comment": "units of Hertz (Hz)",
                    "$ref": "unit.json#/unit"
                },
                "blockEraseTime": {
                    "description": "time it takes to erase a block (largest erasable unit) of the flash memory",
                    "comment": "units of seconds (s)",
                    "$ref": "unit.json#/unit"
                },
                "sectorEraseTime": {
                    "description": "time it takes to erase a sector (smallest erasable unit) of the flash memory",
                    "comment": "units of seconds (s)",
                    "$ref": "conditionalProperty.json#/conditionalProperty"
                },
                "chipEraseTime": {
                    "description": "time it takes to erase the flash memory",
                    "comment": "units of seconds (s)",
                    "$ref": "unit.json#/unit"
                },
                "pageProgramTime": {
                    "description": "time it takes to program a page of the flash memory",
                    "comment": "units of seconds (s)",
                    "$ref": "unit.json#/unit"
                },
                "endurance": {
                    "description": "time in years a bit in the eeprom can retain its data state ",
                    "type": "number"
                },
                "dataRetention": {
                    "description": "maximum number of read and write cycle the part can support",
                    "type": "number"
                },
                "hwReset": {
                    "description": "whether the part supports a hardware reset pin",
                    "type": "boolean"
                },
                "writeProtect": {
                    "description": "whether the part has a write protect pin",
                    "type": "boolean"
                },
                "currentConsumption": {
                    "description": "current consumption of a device",
                    "comment": "units of amps",
                    "$ref": "currentConsumption.json#/currentConsumption"
                }
            }
        }
    ]
}
