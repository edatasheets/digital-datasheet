{
    "$id": "https:/github.com/edatasheets/digital-datasheets/blob/main/part-spec/common/powerSequence.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "specification of power sequencing information",
    "powerSequenceTable": {
        "type": "object",
        "properties": {
            "values": {
                "description": "list of power sequence conditions that apply to a component",
                "type": "array",
                "items": {
                    "$ref": "#/$defs/powerSequence"
                }
            }
        },
        "additionalProperties": false
    },
    "$defs": {
        "powerSequence": {
            "type": "object",
            "properties": {
                "powerTransitionName": {
                    "description": "Datasheet specific name given to a particular power transition for tracking",
                    "examples": [
                        "tPWONVDD15",
                        "tVDDRise"
                    ],
                    "type": "string"
                },
                "signal1": {
                    "description": "Signal that comes up first in the sequence. Also used if there is only one relevant signal for a power transition (such as rise time) ",
                    "examples": [
                        "vdd",
                        "en"
                    ],
                    "type": "string"
                },
                "signal1TerminalIdentifiers": {
                    "description": "List of component pins associated with signal 1",
                    "type": "array",
                    "examples": [
                        "23",
                        "A1"
                    ],
                    "items": {
                        "$ref": "string"
                    }
                },
                "signal2": {
                    "description": "Signal that comes up second in the sequence ",
                    "examples": [
                        "vdd",
                        "en"
                    ],
                    "type": "string"
                },
                "signal2TerminalIdentifiers": {
                    "description": "List of component pins associated with signal 2",
                    "type": "array",
                    "examples": [
                        "23",
                        "A1"
                    ],
                    "items": {
                        "$ref": "string"
                    }
                },
                "timeCondition": {
                    "description": "Time between the the signal 1 and signal 2 event",
                    "comment": "units of time",
                    "$ref": "../common/values.json#/valueOptions"
                },
                "powerDirection": {
                    "description": "Whether this is a power up or power down event",
                    "enum": [
                        "Up",
                        "Down"
                    ]
                },
                "nextPowerState": {
                    "description": "Power state the device enters after the signal transition",
                    "type": "string",
                    "examples": [
                        "suspend",
                        "active"
                    ]
                },
                "currentPowerState": {
                    "description": "Power state the device is currently in before the signal transition",
                    "type": "string",
                    "examples": [
                        "suspend",
                        "active"
                    ]
                },
                "riseTime": {
                    "description": "Time for a signal to go from low to high",
                    "comment": "units of time",
                    "$ref": "../common/values.json#/valueOptions"
                },
                "fallTime": {
                    "description": "Time for a signal to go from high to low",
                    "comment": "units of time",
                    "$ref": "../common/values.json#/valueOptions"
                },
                "transitionStartCondition": {
                    "description": "The percentage of max voltage where rise or fall time starts being measured for timing",
                    "examples": [
                        "10%",
                        "90%"
                    ],
                    "comment": "units of percentage",
                    "$ref": "../common/values.json#/valueOptions"
                },
                "transitionEndCondition": {
                    "description": "The percentage of max voltage where rise or fall time stops being measured for timing",
                    "examples": [
                        "90%",
                        "10%"
                    ],
                    "comment": "units of percentage",
                    "$ref": "../common/values.json#/valueOptions"
                }
            },
            "additionalProperties": false
        }
    }
}