{
    "$id": "https://github.com/chromeos/digital-datasheets/blob/main/part-spec/ic_micro.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "ic micro",
    "oneOf": [
        {
            "title": "microcontroller/ec",
            "type": "object",
            "required": [
                "componentID"
            ],
            "properties": {
                "componentID": {
                    "description": "common component identifying information, such as mpn",
                    "$ref": "componentID.json#/componentID"
                },
                "onChipFlash": {
                    "description": "quantity of built-in flash in a microprocessor",
                    "comment": "units of kilobytes",
                    "$ref": "unit.json#/unit"
                },
                "onChipRAM": {
                    "description": "quantity of built-in RAM in a microprocessor",
                    "comment": "units of kilobytes",
                    "$ref": "unit.json#/unit"
                },
                "onChipROM": {
                    "description": "quantity of built-in ROM in a microprocessor",
                    "comment": "units of kilobytes",
                    "$ref": "unit.json#/unit"
                },
                "coreProcessor": {
                    "description": "description of core processor",
                    "examples": [
                        "Cortex-M4"
                    ],
                    "type": "string"
                },
                "coreArchitectureBits": {
                    "description": "number of bits of data a CPU can transfer per clock cycle",
                    "examples": [
                        "32-bit"
                    ],
                    "type": "string"
                },
                "clockSpeed": {
                    "description": "speed of main CPU clock",
                    "comment": "units of hertz",
                    "$ref": "unit.json#/unit"
                },
                "firmwareVersion": {
                    "description": "firmware version of the part",
                    "type": "string"
                },
                "activePower": {
                    "description": "average power of device in active state",
                    "comment": "units of mW",
                    "$ref": "unit.json#/unit"
                },
                "standbyPower": {
                    "description": "average power of device in standby state",
                    "comment": "units of uW",
                    "$ref": "unit.json#/unit"
                },
                "currentConsumption": {
                    "description": "current used by device in various power modes",
                    "$ref": "currentConsumption.json#/currentConsumption"
                },
                "pins": {
                    "description": "array of pin objects with associated properties",
                    "type": "array",
                    "items": {
                        "$ref": "pinSpec.json#/pinSpec"
                    }
                },
                "package": {
                    "description": "component's package size and description",
                    "$ref": "package.json#/package"
                }
            }
        }
    ]
}
