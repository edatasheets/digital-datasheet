{
    "$id": "https://github.com/chromeos/digital-datasheets/blob/main/part-spec/power.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "power",
    "oneOf": [
        {
            "title": "switching converter",
            "type": "object",
            "required": [
                "partType",
                "manufacturer",
                "orderableMPN",
                "sourceDatasheetID",
                "digitalDatasheetID"
            ],
            "properties": {
                "partType": {
                    "description": "part type",
                    "type": "string",
                    "enum": [
                        "switchingConverter"
                    ]
                }
            },
            "manufacturer": {
                "description": "company that manufactures the part",
                "type": "string"
            },
            "componentName": {
                "description": "base part name that describes the form and fit of a component",
                "type": "string"
            },
            "orderableMPN": {
                "description": "orderable manufacturer part number",
                "type": "string"
            },
            "sourceDatasheetID": {
                "description": "methods for identifying the human-readable source information for a digital datasheet",
                "$ref": "#/$defs/sourceDatasheetID"
            },
            "digitalDatasheetID": {
                "description": "methods for identifying the version of the digital datasheet",
                "$ref": "#/$defs/digitalDatasheetID"
            },
            "status": {
                "description": "production status of a component",
                "examples": [
                    "preProduction",
                    "active",
                    "EOL"
                ],
                "type": "string"
            },
            "regulatorTopology": {
                "description": "switching voltage regulator topology",
                "examples": [
                    "buck",
                    "boost",
                    "buck-boost",
                    "other"
                ],
                "type": "string"
            },
            "vinMin": {
                "description": "minimum input voltage under which the part can be expected to operate properly",
                "comment": "units of volts",
                "$ref": "#/definitions/unit"
            },
            "vinMax": {
                "description": "maximum input voltage under which the part can be expected to operate properly",
                "comment": "units of volts",
                "$ref": "#/definitions/unit"
            },
            "voutMin": {
                "description": "minimum output voltage the part can regulate",
                "comment": "units of volts",
                "$ref": "#/definitions/unit"
            },
            "voutMax": {
                "description": "maximum output voltage the part can regulate",
                "comment": "units of volts",
                "$ref": "#/definitions/unit"
            },
            "feedbackVoltage": {
                "description": "voltage comparison point at the feedback node",
                "comment": "units of volts",
                "$ref": "#/definitions/unit"
            },
            "voutAccuracy": {
                "description": "output voltage variation at no load",
                "comment": "units of %",
                "type": "number"
            },
            "loadRegulation": {
                "description": "output voltage variation from no load to full load ",
                "comment": "units of %",
                "type": "number"
            },
            "lineRegulation": {
                "description": "output voltage variation from minimum input voltage to maximum input voltage ",
                "comment": "units of %",
                "type": "number"
            },
            "Iq": {
                "description": "quiescent current of voltage regulator at no load",
                "comment": "units of amps",
                "$ref": "#/definitions/unit"
            },
            "Isd": {
                "description": "shutdown current of voltage regulato",
                "comment": "units of amps",
                "$ref": "#/definitions/unit"
            },
            "fsw": {
                "description": "swtiching frequency of voltage regulator",
                "comment": "units of hertz",
                "$ref": "#/definitions/unit"
            },
            "ilimHSFET": {
                "description": "maximum sustained current output current under which the high side FET will operate properly",
                "comment": "units of amps",
                "$ref": "#/definitions/unit"
            },
            "ilimLSFET": {
                "description": "maximum sustained current output current under which the low side FET will operate properly",
                "comment": "units of amps",
                "$ref": "#/definitions/unit"
            },
            "rdsonHSFET": {
                "description": "high side FET on-resistance",
                "comment": "units of ohms",
                "$ref": "#/definitions/unit"
            },
            "rdsonLSFET": {
                "description": "low side FET on-resistance",
                "comment": "units of ohms",
                "$ref": "#/definitions/unit"
            },
            "enableTime": {
                "description": "time between enable asserted and output voltage rising to 10% nominal",
                "comment": "units of seconds",
                "$ref": "#/definitions/unit"
            },
            "rampTime": {
                "description": "time for output voltage to go from 10% vout nominal to 90% vout nominal",
                "comment": "units of seconds",
                "$ref": "#/definitions/unit"
            },
            "integratedFets": {
                "description": "whether the regulator contains integrated switching mosfets",
                "type": "boolean"
            },
            "uvloTresholdRising": {
                "description": "Undervoltage Lockout Out Threshold with input voltage rising",
                "comment": "units of Volts",
                "$ref": "#/definitions/unit"
            },
            "uvloTresholdFalling": {
                "description": "Undervoltage Lockout Out Threshold with input voltage falling",
                "comment": "units of Volts",
                "$ref": "#/definitions/unit"
            },
            "ovpTresholdRising": {
                "description": "Overvoltage Protection Threshold with input voltage rising",
                "comment": "units of Volts",
                "$ref": "#/definitions/unit"
            },
            "ovpTresholdFalling": {
                "description": "Overvoltage Protection Threshold with input voltage falling",
                "comment": "units of Volts",
                "$ref": "#/definitions/unit"
            },
            "tsdRising": {
                "description": "Thermal Shudown Threshold with temperature rising",
                "comment": "units of celsius",
                "$ref": "#/definitions/unit"
            },
            "tsdFalling": {
                "description": "Thermal Shudown Threshold with temperature falling",
                "comment": "units of celsius",
                "$ref": "#/definitions/unit"
            },
            "tsdHysteresis": {
                "description": "Thermal Shutdown Hysteresis",
                "comment": "units of celsius",
                "$ref": "#/definitions/unit"
            },
            "efficiency": {
                "description": "power efficiency of regulator",
                "$ref": "#/graph/graphDefiniton"
            },
            "pins": {
                "description": "array of pin objects with associated properties",
                "type": "array",
                "items": {
                    "$ref": "definitions.json#/pinSpec"
                }
            }
        }
    ]
}